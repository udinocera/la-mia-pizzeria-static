@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
   <!-- Required meta tags -->
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1">

   <!-- Bootstrap CSS -->
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

   <title>Pizzeria Di Nocera</title>
</head>


<body>

  
     <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
      <div class="container">
         <span class="navbar-brand mb-0 h1">PIZZERIA DI NOCERA</span>
      </div>
   </nav>

   <main>
      <div class="container">
         <div class="row mt-3">
            <table class="table">
               <thead>
                  <tr>
                     <th scope="col">Foto</th>
                     <th scope="col">Nome</th>
                     <th scope="col">Descrizione</th>     
                     <th scope="col">Prezzo</th>
                  </tr>
               </thead>
               <tbody>
                  <tr>
                     <td><img src="https://primochef.it/wp-content/uploads/2020/04/SH_pizza_quattro_stagioni.jpg" class="img-fluid" style="width:300px; height:300px"   alt="Pizza 4 Stagioni"></td>
                     <th>4 Stagioni</th>
                     <td>Funghi, Prosciutto Cotto, Olive, Carciofi, Pomodori</td>
                     <td>€ 7,00</td>
                  </tr>
                  <tr>
                     <td><img src="https://upload.wikimedia.org/wikipedia/commons/c/c8/Pizza_Margherita_stu_spivack.jpg" class="img-fluid" style="width:300px; height:300px"  alt="Pizza Margherita"></td>
                     <th scope="row">Margherita</th>
                     <td>Pomodoro, Mozzarella, Olio, Basilico</td>   
                     <td>€ 4,00</td>
                  </tr>
                  <tr>
                     <td><img src="https://www.gustissimo.it/articoli/ricette/pizze/pizza-tonno-e-cipolla.jpg" class="img-fluid" style="width:300px; height:300px"  alt="Pizza Tonno e Cipolla"></td>
                     <th scope="row">Tonno e Cipolla</th>
                     <td >Tonno, Cipolla, Mozzarella, Pomodoro</td>
                     <td>€ 6,00</td>
                  </tr>
                  <tr>
                     <td><img src="https://primochef.it/wp-content/uploads/2018/05/SH_pizza_capricciosa.jpg" class="img-fluid" style="width:300px; height:300px"  alt="Pizza Capricciosa"></td>
                     <th scope="row">Capricciosa</th>
                     <td >Pomodoro, mozzarella, funghi, carciofi, prosciutto, olive nere</td>
                     <td>€ 5,00</td>
                  </tr>
               </tbody>
            </table>
         </div>
      </div>
   </main>
</body>
</html>
